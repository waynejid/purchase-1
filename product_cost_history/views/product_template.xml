<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_cost_history_action" model="ir.actions.act_window">
            <field name="name">Cost History</field>
            <field name="res_model">product.cost.history</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('product_id.product_tmpl_id.id', '=', context.get('product_tmpl_id'))]</field>
        </record>

        <record id="view_product_template_form_publisher" model="ir.ui.view">
            <field name="name">view_product_template_form_publisher</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@name='button_box']" position="inside">
                        <button class="oe_stat_button" name="%(product_template_cost_history_action)d" type="action" icon="fa-history" context="{'product_tmpl_id': id}">
                            <field string="Cost History" name="cost_history_count" widget="statinfo" modifiers="{'readonly': true}"/>
                        </button>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>