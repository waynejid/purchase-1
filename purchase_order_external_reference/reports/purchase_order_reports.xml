<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchasequotation_document_partner_external_ref"
              inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//table" position="before">
            <div class="row mt32 mb32" id="informations">
                <div t-if="o.partner_ref_external" class="col-xs-3">
                    <strong>Our reference:</strong>
                    <p t-field="o.partner_ref_external"/>
                </div>
            </div>
        </xpath>
    </template>

    <template id="report_purchaseorder_document_partner_external_ref"
              inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//div[@class='row mt32 mb32']" position="inside">
            <div t-if="o.partner_ref_external" class="col-xs-3">
                <strong>Our reference:</strong>
                <p t-field="o.partner_ref_external"/>
            </div>
        </xpath>
    </template>
</odoo>
