<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_partner_external_ref" model="ir.ui.view">
        <field name="name">purchase_order_form_partner_external_ref</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_ref_external" readonly="True"/>
            </xpath>
        </field>
    </record>
</odoo>
